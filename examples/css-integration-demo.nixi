          }
        };

        # Interactive elements
        div {
          class: "glass-card";
          style: "margin: 2rem 0; text-align: left;";
          h3 { style: "margin-top: 0;"; text: "ðŸŽª Interactive CSS Features" };
          ul {
            style: "list-style: none; padding: 0;";
            children: [
              li { style: "margin: 0.5rem 0;"; text: "âœ… CSS Grid and Flexbox layouts" };
              li { style: "margin: 0.5rem 0;"; text: "âœ… Custom animations and transitions" };
              li { style: "margin: 0.5rem 0;"; text: "âœ… Responsive design with media queries" };
              li { style: "margin: 0.5rem 0;"; text: "âœ… Modern effects (glass, neon, gradients)" };
              li { style: "margin: 0.5rem 0;"; text: "âœ… Interactive tooltips and badges" };
              li { style: "margin: 0.5rem 0;"; text: "âœ… Loading animations and progress bars" }
            ]
          }
        };

        footer {
          style: "margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(255, 255, 255, 0.2);";
          p { 
            style: "opacity: 0.8; font-size: 0.9rem;";
